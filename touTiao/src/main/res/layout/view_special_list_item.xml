<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_item_padding_1"
    android:paddingRight="@dimen/list_item_padding_1"
    android:paddingTop="@dimen/list_item_padding_2" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp" >

        <com.yingshi.toutiao.view.CustomizeImageView
            android:id="@+id/id_special_thumbnail"
            android:layout_width="@dimen/list_item_icon_width"
            android:layout_height="@dimen/list_item_icon_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/list_item_thumbnail"
            android:contentDescription="@string/img_content_description" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <TextView
                android:id="@+id/id_special_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/id_special_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/id_special_video_sign"
                android:layout_width="27dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:contentDescription="@string/img_content_description"
                android:src="@drawable/shipin" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/id_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_divider_height"
        android:layout_marginTop="@dimen/list_item_padding_2"
        android:background="@color/divider_color" />

</LinearLayout>