<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/img_content_description"
            android:src="@drawable/login_logo" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:layout_weight="0.37"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/id_btn_login_qq"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:contentDescription="@string/img_content_description"
            android:onClick="loginQQ"
            android:src="@drawable/login_qq" />

        <ImageView
            android:id="@+id/id_btn_login_weixin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:contentDescription="@string/img_content_description"
            android:onClick="loginWeixin"
            android:src="@drawable/login_weixin" />

        <ImageView
            android:id="@+id/id_btn_login_weibo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:contentDescription="@string/img_content_description"
            android:onClick="loginWeibo"
            android:src="@drawable/login_weibo" />
    </LinearLayout>

    <View
        android:id="@+id/id_btn_enter"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18"
        android:onClick="enter" />

</LinearLayout>